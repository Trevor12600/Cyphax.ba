<script>
/* ---------------------------
   COUNTDOWN TIMER - FIXED
---------------------------- */
let timeLeft = 60 * 60; // 60 minutes
let alertShown = false;
let slotsLeft = 7;

function updateTimer() {
  const timer = document.getElementById("timer");
  const slotsElement = document.getElementById("slotsLeft");
  
  let minutes = Math.floor(timeLeft / 60);
  let seconds = timeLeft % 60;
  if (seconds < 10) seconds = "0" + seconds;

  timer.innerText = minutes + ":" + seconds;
  slotsElement.innerText = slotsLeft;

  // Update slot counter in the banner
  const banner = document.querySelector(".deal-banner");
  banner.innerHTML = `üî• Flash Deal! Only <span id="timer">${minutes + ":" + seconds}</span> left! Limited to **${slotsLeft}/50** Slots!`;

  if (timeLeft === 60 && !alertShown) {
    alertShown = true;
    alert("Hurry! Only 1 minute left for the deal!");
  }

  if (timeLeft > 0) {
    timeLeft--;
    setTimeout(updateTimer, 1000);
  } else {
    timer.innerText = "EXPIRED";
    // Optionally disable buttons here
    document.querySelector(".sticky-buy button").disabled = true;
  }
}

updateTimer();

/* ---------------------------
   VOICE SELECTION FUNCTIONALITY
---------------------------- */
document.addEventListener('DOMContentLoaded', function() {
  // Voice selection
  const voiceOptions = document.querySelectorAll('.voice-option');
  const selectedVoiceInput = document.getElementById('selectedVoice');
  
  voiceOptions.forEach(option => {
    option.addEventListener('click', function() {
      // Remove selected class from all options
      voiceOptions.forEach(opt => opt.classList.remove('selected'));
      
      // Add selected class to clicked option
      this.classList.add('selected');
      
      // Update hidden input with selected voice
      selectedVoiceInput.value = this.dataset.voice;
    });
  });
  
  // Voice preview functionality
  const playButtons = document.querySelectorAll('.play-button');
  let currentlyPlaying = null;
  
  playButtons.forEach(button => {
    button.addEventListener('click', function(e) {
      e.stopPropagation(); // Prevent triggering the parent click event
      
      const voiceId = this.dataset.voice;
      
      // If this voice is already playing, stop it
      if (currentlyPlaying === voiceId) {
        stopAllVoices();
        currentlyPlaying = null;
        return;
      }
      
      // Stop any currently playing voice
      stopAllVoices();
      
      // Start playing this voice
      currentlyPlaying = voiceId;
      this.textContent = '‚èπ';
      this.classList.add('playing');
      
      // In a real implementation, this would play an actual audio sample
      // For this demo, we'll simulate playback with a timeout
      setTimeout(() => {
        stopAllVoices();
        currentlyPlaying = null;
      }, 3000); // Simulate 3 seconds of playback
    });
  });
  
  function stopAllVoices() {
    playButtons.forEach(button => {
      button.textContent = '‚ñ∂';
      button.classList.remove('playing');
    });
  }
  
  // Select the first voice by default
  if (voiceOptions.length > 0) {
    voiceOptions[0].classList.add('selected');
  }
});

/* ---------------------------------------------
   AD GENERATOR - GATED CONTENT (PAYWALL LOGIC)
------------------------------------------------ */
function generateAd() {
  const url = document.getElementById("productUrl").value;
  const audience = document.getElementById("targetAudience").value || "Business Owners";
  const tone = document.getElementById("videoTone").value;
  const email = document.getElementById("userEmail").value;
  const selectedVoice = document.getElementById("selectedVoice").value;
  
  if (!email.includes('@')) {
      alert("Please enter a valid email address first.");
      document.getElementById("userEmail").focus();
      return;
  }
  if (!url.startsWith('http')) {
      alert("Please enter a valid URL (starting with http:// or https://) for product analysis.");
      document.getElementById("productUrl").focus();
      return;
  }
  
  // Show loading indicator
  document.getElementById("loadingIndicator").style.display = "block";
  document.getElementById("adOutput").style.display = "none";
  
  // Simulate AI processing time
  setTimeout(() => {
    // --- SIMULATED AI ANALYSIS ---
    let scrapedFeature = "Our revolutionary 'One-Click Setup' feature";
    let painPoint = "The stress and cost of traditional advertising methods";
    let hookAngle = "";
    let openingLine = "";
    let avatarStyle = "";
    
    // Dynamic logic based on tone
    if (tone.includes("Urgent")) {
        hookAngle = "Focus on 'Missing Out' and 'Immediate Action'";
        openingLine = `Stop wasting time! Did you know 90% of ${audience} are missing out on this?`;
        avatarStyle = "An authoritative, energetic male presenter.";
    } else if (tone.includes("Trustworthy")) {
        hookAngle = "Focus on 'Security' and 'Reliable Results'";
        openingLine = `For ${audience}, reliability is key. Let's solve ${painPoint.toLowerCase()} together.`;
        avatarStyle = "A calm, professional female presenter.";
    } else if (tone.includes("Emotional")) {
        hookAngle = "Focus on 'Relief' and 'Simplicity'";
        openingLine = `We know how stressful ${painPoint.toLowerCase()} is. But it doesn't have to be...`;
        avatarStyle = "A friendly, casual presenter.";
    } else {
        hookAngle = "Focus on 'Fun' and 'Viral Sharing'";
        openingLine = `Wait, what?! You can actually get ${scrapedFeature.toLowerCase()}? Yes, you can!`;
        avatarStyle = "A vibrant, expressive presenter.";
    }
    
    // Get voice name for display
    let voiceName = "Alex - Professional";
    switch(selectedVoice) {
      case "sarah":
        voiceName = "Sarah - Trustworthy";
        break;
      case "mike":
        voiceName = "Mike - Energetic";
        break;
      case "emma":
        voiceName = "Emma - Friendly";
        break;
    }

    // 1. Create the simulated, organized Teaser
    const scriptTeaser = `
=============================================
  AI MARKETING ANALYSIS (In Progress)
=============================================
  ‚úÖ Scraped URL: ${url}
  ‚úÖ Target Audience: ${audience}
  ‚úÖ Desired Tone: ${tone}
