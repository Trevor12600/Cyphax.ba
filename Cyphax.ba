/* ---------------------------------------------
   CHECKOUT REDIRECTION FUNCTION (The Pay Link)
------------------------------------------------ */
function redirectToCheckout() {
  // 1. Capture the inputs from the form before redirecting
  const url = document.getElementById("productUrl").value;
  const audience = document.getElementById("targetAudience").value;
  const tone = document.getElementById("videoTone").value;
  const email = document.getElementById("userEmail").value;
  const selectedVoice = document.getElementById("selectedVoice").value;
  
  // Check if a valid email was entered
  if (!email.includes('@') || email.length < 5) {
      alert("Please enter a valid email address to proceed to checkout and receive your ad.");
      document.getElementById("userEmail").focus();
      return;
  }
  
  // --- !!! IMPORTANT: REPLACE THIS URL !!! ---
  const baseCheckoutURL = "https://your-secure-payment-processor.com/checkout?";
  
  // Construct URL parameters to pass to the processor (Metadata for fulfillment)
  const params = new URLSearchParams({
    price: '5.99',
    item: 'AI_Video_Ad',
    userEmail: email,
    productUrl: url,
    adAudience: audience,
    adTone: tone,
    selectedVoice: selectedVoice
  }).toString();

  const finalCheckoutURL = baseCheckoutURL + params;
  
  // 2. Redirect the user to the secure checkout page
  window.location.href = finalCheckoutURL;
  
  // Fallback for demonstration/testing (optional):
  // alert("Redirecting to: " + finalCheckoutURL);
}


